            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/nav_graph"
            app:startDestination="@id/dashboardFragment">
    <fragment
            android:id="@+id/navigation_home"
            android:name="com.example.courseworkadmin.ui.home.HomeFragment"
            android:label="Home" />


    <!-- Dashboard Fragment -->
    <fragment
            android:id="@+id/dashboardFragment"
            android:name="com.example.courseworkadmin.ui.dashboard.DashboardFragment"
            android:label="Dashboard" >

    <action
                android:id="@+id/action_dashboardFragment_to_addCourseFragment"
                app:destination="@id/addCourseFragment" />
    </fragment>


    <!-- AddCourse Fragment -->
    <fragment
            android:id="@+id/addCourseFragment"
            android:name="com.example.courseworkadmin.ui.addEditClass.AddEditClassFragment"
            android:label="Add Course" />

    <fragment
            android:id="@+id/navigation_notifications"
            android:name="com.example.courseworkadmin.ui.notifications.SearchFragment"
            android:label="Notifications" />
